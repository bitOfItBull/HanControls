<Window x:Class="HanControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HanControls"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStartupLocation="CenterScreen"
        Height="450"
        Width="800">
    <StackPanel Margin="20" HorizontalAlignment="Left"
                Orientation="Vertical">
        <Button Content="Single String Dialog"
                Name="singleDialogButton"
                Command="{Binding Cmd_DialogSingleString}"
                CommandParameter="{Binding ElementName=singleDialogButton}"
                Style="{StaticResource DefaultButtonStyle}" />

    </StackPanel>
</Window>
